{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "lib": [
      "ES2020",
      "DOM",
      "WebWorker",
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
